{
  "version": 2,
  "projects": [
    {
      "slug": "backend",
      "root": "backend",
      "outputDirectory": "dist"
    },
    {
      "slug": "frontend",
      "root": "frontend",
      "outputDirectory": "dist"
    }
  ],
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
