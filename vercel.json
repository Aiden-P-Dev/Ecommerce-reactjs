{
  "version": 2,
  "trailingSlash": true,

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.js"
    },

    {
      "src": "/(.*\\.[A-Za-z0-9]+)",
      "dest": "/frontend/dist/$1"
    },

    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
